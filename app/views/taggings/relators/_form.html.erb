<% remote ||= false %>
<%= form_for @relator, remote: remote do |f| %>

	<p class='note'>Use gender neutral terms whenever possible.</p>

	<fieldset class="primary">
		<%= string_panel f, :left_name,  "Name Relationship" %>
		<%= string_panel f, :right_name, "Name The Inverse Relationship If It Exists" %>
	</fieldset>
	
	<%= submit_panel f %>

<% end %>