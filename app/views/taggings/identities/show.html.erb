<% provide(:title, @identity.page_title) %>

<header class="tag-header">
	<%= content_tag :h1, id: @tag.heading_id do %>
		<%= @tag.facet_title %>
		<%= subtitle @tag.name %>
	<% end %>

	<%= @tag.edit_form_div %>
	<%= @tag.edit_bar %>

	<div class="metadata">
		<%= metadata("First Use", @tag.created_at_tag) %>
	</div>
</header>


<article class="page-body">
	<header>
		<nav class="related-menu">
			<%= link_to "All Works",      identity_works_path(@identity) %>
			<%= link_to "All Characters", identity_characters_path(@identity) %>
		</nav>
		<%= render 'pagination' %>
	</header>

	<%= render 'stats' %>

	<footer>
		<%= render 'pagination' %>
	</footer>

</article>

<%= render 'taggings/shared/footer' %>

