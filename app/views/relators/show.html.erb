<% provide(:title, @relator.heading.html_safe) %>

<main id='item'>
	<header>
		<%= model_toolkit @relator %>
		<h1><%= @relator.heading %></h1>
		<p>created : <%= record_time @relator.created_at %></p>
	</header>

	<article>
		<table>
			<% if @relator.relationships.length > 0  && @relator.has_reverse? %>
				<thead>
					<tr><th><%= @relator.left_name.titleize %></th> <th><%= @relator.right_name.titleize %></th></tr>
				</thead>

				<% @relator.relationships.each do |relationship| %>
					<tr>
						<td><%= link_to relationship.left.name, relationship.left %></td>
						<td><%= link_to relationship.right.name, relationship.right %></td>
					</tr>
				<% end %>
			<% else %>
				<thead><tr><th><%= @relator.heading %></th></tr></thead>
				<% @relator.relationships.each do |relationship| %>
					<tr><td><%= link_to relationship.left.name, relationship.left %> & <%= link_to relationship.right.name, relationship.right %></td></tr>
				<% end %>
			<% end %>
		</table>
	</article>
	<%= render 'shared/tag_footer' %>
<main>
