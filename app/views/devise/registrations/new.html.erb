<h2>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

	<%= devise_error_messages! %>

	<fieldset class="form-grid">
		<legend>Sign Up</legend>
		<%= string_panel f, :name, "Username", "Username" %>
		<%= input_email  f %>
	</fieldset>

	<fieldset class="form-grid">
		<legend>
			Password 
			<span class="input-rule">(<%= @minimum_password_length %> characters minimum)</span>
		</legend>

		<%= input_password f, :password %>
		<%= input_password f, :password_confirmation %>
	</fieldset>

	<div class="grid-panel submit-field">
		<div class="panel-cell solo"><%= f.submit "Sign Up" %></div>
	</div>

<% end %>

<footer>
	<%= render "devise/shared/links" %>
</footer>
