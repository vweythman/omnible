<h2>Change your password</h2>
<%= clean_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

	<%= devise_error_messages! %>
	<%= f.hidden_field :reset_password_token %>

	<%= f.password_cell :password %>
	<%= f.password_cell :password_confirmation %>

	<%= f.submit_cell "Change my password" %>
<% end %>

<footer>
	<%= render "devise/shared/links" %>
</footer>
