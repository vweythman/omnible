<%= form_for(@place) do |f| %>

	<fieldset class="primary">
		<%= string_panel f, :nature, "Describe Type" %>
		<%= string_panel f, :name,   "Name Place"    %>
		<%= radios_by_string(f, :fictional, @place.realness_choices, f.object.fictional?) %>
	</fieldset>

	<fieldset class="tags about">
		<legend>Related Places</legend>
		<%= solo_cell do %>
			<%= taggables(['place', "domains"],    @place.domain_names,    "Contained Within") %>
			<%= taggables(['place', "subdomains"], @place.subdomain_names, "Contains")         %>
		<% end %>
	</fieldset>

	<%= submit_panel f %>

<% end %>
