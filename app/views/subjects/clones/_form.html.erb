<%= clean_form_for(@replication, url: clone_path(@clone), html: { method: "patch" }) do |f| %>

	<fieldset class="associative-fieldset">
		<legend>Original Character</legend>
		<%= f.hidden_field    :clone_id,    value: @clone.id %>
		<%= f.selectable_cell :original_id, @clone.other_characters %>
	</fieldset>
	
	<%= f.submit_cell "Submit" %>
<% end %>
