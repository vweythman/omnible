<%= clean_form_for(@item) do |f| %>
	<%= error_block(@item) %>

	<fieldset class="primary-fieldset solo-fieldset">
		<%= grid_panel do %>
			<%= panel_cell "duo" do %>
				<%= f.string_cell :name,   "Item Name" %>
			<% end %>
			<%= panel_cell "duo" do %>
				<%= f.string_cell :nature, "Item Type" %>
			<% end %>
		<% end %>

		<%= tag_field_cell(["item","descriptions"], @item.current_tags, "General Tags") %>
	</fieldset>

	<%= f.submit_cell %>

<% end %>
