<div class="info-grid">
	<%= grid_panel do %>
		<% if @character.has_about? %>
			<%= panel_cell "golden-major" do %>
				<%= @character.subarticle %>
				<%= @character.table_connections %>
			<% end %>
			<% overview_size = "golden-minor" %>
		<% else %>
			<% overview_size = "solo" %>
		<% end %>

		<%= panel_cell overview_size do %>
			<%= @character.list_identities %>
			<%= @character.list_possessions %>
		<% end %>
	<% end %>

	<%= solo_cell do %>
		<% if @character.viewpoints.length > 0 %>
			<h2>Opinions and Prejudices</h2>
			<table class="views">
				<thead>
					<tr>
						<th>Recipient</th>
						<th>Fondness</th>
						<th>Respect</th>
						<th>Details</th>
					</tr>
				</thead>
				
				<% @character.viewpoints.each do |view| %>
					<%= view.row %>
				<% end %>
			</table>
		<% end %>
		<% if @character.reputations.size > 0 %>
			<h2>Court of Public Opinion</h2>

			<p class='public-opinion-count'><%= @character.public_opinion_status %></p>
			<table class="aggregated-views">
				<thead>
					<tr>
						<th>Likability</th>
						<th>Respect</th>
					</tr>
				</thead>
				<tr>
					<%= @character.public_opinion.fondness_data %>
					<%= @character.public_opinion.respect_data %>
				</tr>
			</table>
		<% end %>
	<% end %>

	<% unless @character.clones.empty? %>
		<%= solo_cell do %>
			<h2>Variants</h2>
			<%= @character.list_clones %>
		<% end %>
	<% end %>
</div>
