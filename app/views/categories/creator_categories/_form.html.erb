<% remote ||= false %>
<%= form_for @creator_category, remote: remote do |f| %>

	<fieldset class="form-grid primary">
		<%= string_panel f, :name, "writer, singer, illustrator..." %>
		<%= string_panel f, :agentive, "written by, sung by, illustrated by... (irregular inflection is hard)" %>
	</fieldset>

	<% unless remote %>
		<fieldset class="nested">
			<legend>Used By</legend>
			<%= choose_any f, :work_types, WorksTypeDescriber.all %>
		</fieldset>
	<% else %>
		<%= f.hidden_field :work_types, value: @creator_category.work_type_describers.pluck(:id) %>
	<% end %>

	<%= submit_panel f %>

<% end %>
