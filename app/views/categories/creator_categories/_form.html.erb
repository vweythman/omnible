<% remote ||= false %>

<%= clean_form_for(@creator_category, remote: remote) do |f| %>

	<%= error_block(@creator_category) %>

	<fieldset class="form-grid primary">
		<%= f.string_cell :name, "Name" %>
		<%= f.string_cell :agentive, "Inflected Agentive", placeholder: "written by, sung by, illustrated by..." %>
	</fieldset>

	<% unless remote %>
		<fieldset class="associative-fieldset">
			<legend>Used By</legend>
			<%= f.multiple_choice :work_types, WorksTypeDescriber.all %>
		</fieldset>
	<% else %>
		<%= f.hidden_field :work_types, value: @creator_category.describers.pluck(:id) %>
	<% end %>

	<%= f.submit_cell %>

<% end %>
