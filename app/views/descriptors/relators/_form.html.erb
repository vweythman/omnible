<%= form_for(@relator) do |f| %>

	<p>Use gender neutral terms whenever possible.</p>

	<fieldset>
		<%= form_field f.label(:left_name, 'Relationship'), f.text_field(:left_name, :placeholder => "Name Relationship") %>
		<%= form_field f.label(:right_name, 'Inverse Relationship'), f.text_field(:right_name, :placeholder => "Name the Inverse Relationship If It Exists") %>
	</fieldset>

	<%= show_link @connest.heading, @connest.klass %>
	<fieldset class='nested' id="<%= @connest.form_id %>">
		<%= nested_fields @connest, f, {collection: Character.order('lower(name)').all} %>
		<p><%= link_to_add_association '+ Add Relationships', f, @connest.klass, :render_options => {:locals => {collection: Character.order('lower(name)').all}} %></p>
	</fieldset>

	<%= f.submit %>

<% end %>