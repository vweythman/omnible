<% remote ||= false %>
<%= form_for(comment, remote: remote) do |f| %>

	<%= f.hidden_field :topic_id,  :value => comment.topic_id  %>
	<%= f.hidden_field :parent_id, :value => comment.parent_id %>

	<fieldset>
		<legend>Add a comment</legend>
		<%= text_panel f, :content, :minor %>
	</fieldset>

	<%= submit_panel f %>
<% end %>
