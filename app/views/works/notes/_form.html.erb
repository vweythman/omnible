<%= form_for [@work, @note] do |f| %>
	<%= f.hidden_field :work_id, :value => @work.id %>

	<fieldset>
		<%= form_field f.label(:title), f.text_field(:title, :placeholder => "Write Title (Optional)") %>
		<%= form_field f.label(:content), f.text_area(:content,:placeholder => "Write Content Here") %>
	</fieldset>

	<%= submit_panel f %>
<% end %>
