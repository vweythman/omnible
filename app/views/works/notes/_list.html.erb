<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Creation Date</th>
			<th>Update Date</th>
		</tr>
	</thead>
	<% @notes.each do |note| %>
		<tr>
			<th rowspan="2"><%= link_to note.heading, [@work, note] %></th>
			<td data-label="Creation Date"><%= record_time note.created_at %></td>
			<td data-label="Update Date"><%= record_time note.updated_at %></td>
		</tr>
		<%= toolblock 2, note.edit_bar %>
	<% end %>

	<%= toolblock 3, @work.note_insertion_link %></tr>
</table>
