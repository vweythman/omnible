<%= form_for(@work) do |f| %>

	<%= f.hidden_field :user_id,  :value => 1 %>

	<fieldset class="heading">
		<%= form_field f.label(:title), f.text_field(:title, :placeholder => "Add Title") %>
		<%= form_field f.label(:summary), f.text_area(:summary, :placeholder => "Add Summary", :class=> :minor) %>
	</fieldset>

	<fieldset class='tags' id="tags">
		<legend>Tags</legend>
		<%= taggables :tags, @general_tags, nil, "Add General Tags (magic realism,...)" %>
	</fieldset>

	<%= show_link "Characters", :characters %>
	<fieldset class='nested characters' id="form_characters">
		<legend>Characters <%= hide_link :characters %></legend>
		<% @characters.each do |key, listable| %>
			<%= taggables key, listable, "#{key} characters".titleize %>
		<% end %>
	</fieldset>

	<%= f.submit %>
<% end %>
