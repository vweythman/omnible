<div class='nested-fields'>
	<fieldset>
		<legend>Character</legend>
		
		<%= form_field f.label(:character_id), f.collection_select(:character_id, @characters, :id, :name, {}, :class => 'selectables') %>

		<fieldset class='options'>
			<legend>Choose Role</legend>
			<div class='choice'>
			<% Appearance.roles(@work).each do |role| %>
				<%= form_field f.radio_button(:role, role), f.label("role_#{role}", "#{role.capitalize} Character") %>
			<% end %>
			</div>
		</fieldset>
	</fieldset>

	<p><%= link_to_remove_association "- Character", f %></p>
</div>
