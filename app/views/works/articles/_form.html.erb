<%= clean_form_for(@article) do |f| %>

	<%= error_block(@article) %>

	<fieldset class="primary-fieldset">
		<%= f.string_cell :title, "Title" %>
		<%= f.text_cell   :summary, {class: :minor}, true %>
		<%= f.text_cell   :article_content, class: :major %>
	</fieldset>
	
	<%= render @article.meta_fields, f: f %>
	<%= render @article.tag_fields,  f: f %>

	<%= f.submit_cell %>
<% end %>
