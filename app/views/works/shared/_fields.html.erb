<%= grid_panel do %>
	<%= panel_cell "duo" do %>
		<%= string_panel f, :title, "Write Title" %>
		<%= text_panel   f, :summary, :minor, "Add Summary" %>
		<%= render @work.record? ? 'works/shared/creatorship_fields' : 'works/shared/creatorship_local_fields' %>
	<% end %>

	<%= panel_cell "duo" do %>

		<%= grid_panel "simple-selection" do %>
			<%= panel_cell "golden-minor" do %>
				<label for="lang">Language</label>
			<% end %>

			<%= panel_cell "golden-major" do %>
				<select name="lang" id="language">
					<option value="1">English</option>
					<option value="2">Spanish</option>
				</select>
			<% end %>
		<% end %>

		<% if @work.onsite_multishot? %>
			<%= grid_panel "simple-selection" do %>
				<%= panel_cell "golden-minor" do f.label(:status) end %>
				<%= panel_cell "golden-major" do f.select(:status, options_for_select(Work.public_status_labels, @work.status)) end %>
			<% end %>
		<% end %>

		<% if @work.can_skin? %>
			<%= f.fields_for :skinning do |fdr| %>
				<%= render 'works/shared/skin_fields', f: fdr %>
			<% end %>
		<% end %>

	<% end %>
<% end %>

<%= render 'shared/forms/edit_fields', f: f %>
