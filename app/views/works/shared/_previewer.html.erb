<script>
function read_url(input)
{
	if (input.files && input.files[0])
	{
		reader = new FileReader();
		reader.onload = function (e) { $(input).closest(".paged-fieldset").find('.image-preview').attr('src', e.target.result); }

		reader.readAsDataURL(input.files[0]);
	}
}

$(".art-uploader-input").change(function(){ read_url(this); });

$( ".paged-fields" ).delegate( ".art-uploader-input", 'change', function() {
	read_url(this);
});

</script>
