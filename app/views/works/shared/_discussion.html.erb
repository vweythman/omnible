<div class="comments">
	<div class="grid-panel">
		<div class="panel-cell solo">
			<div class="comments-form">
				<%= render 'comments/form', comment: @comment %>
			</div>
		</div>
	</div>

	<div class="grid-panel">
		<div class="panel-cell solo comments">
			<% if @comments.length > 0 %>
				<h3>Comments</h3>

				<% @comments.each do |comment| %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>