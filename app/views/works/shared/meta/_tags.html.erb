
<tr>
	<th>Tags</th>
	<td colspan='3'>
		<dl>
			<% @taggables.each do |type, taggable| %>
				<dt><%= type.pluralize(taggable.count) %></dt>
				<dd><%= cslinks(taggable.map { |tagged| tagged.tag }) %></dd>
			<% end %>

			<%= render 'works/shared/meta/character', characters: @work.main_characters, type: "Main" %>
			<%= render 'works/shared/meta/character', characters: @work.side_characters, type: "Side" %>
			<%= render 'works/shared/meta/character', characters: @work.mentioned_characters, type: "Mentioned" %>
		</dl>
	</td>
</tr>
