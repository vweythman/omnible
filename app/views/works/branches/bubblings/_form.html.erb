<%= clean_form_for [@parent_branch, @branching], :url => branch_bubble_path do |f| %>

	<%= error_block(@branching) %>

	<fieldset class='paged-fieldset'>
		<legend><%= f.string_cell :heading, "Link Text", placeholder: "Write Link Text" %></legend>

		<%= f.fields_for :child_node do |branch_builder| %>
			<%= render 'works/branches/form_fields', f: branch_builder %>
		<% end %>
	</fieldset>

	<%= f.submit_cell "Create" %>
<% end %>
