<% provide(:title, "#{@parent.heading} - Works" ) %>

<main class='index'>
	<header>	
		<h1><%= link_to @parent.heading.titleize, polymorphic_path(@parent) %> / Works</h1>
	</header>

	<%= render 'index_sorter' %>
	<%= render 'index_results' %>
</main>

<footer>
	<p><%= link_to @parent.heading, polymorphic_path(@parent) %></p>
	
	<% if @parent.is_subject? %>
 		<%= render 'subjects/shared/footer' %>
	<% else %>
 		<%= render 'descriptors/shared/footer' %>
		<% end %>
</footer>
