<% provide(:title, "#{@parent.heading} - Works" ) %>
<%= render 'search_form' %>

<main class='index'>
	<header>
		<h1>[<%= link_to @parent.heading.titleize, polymorphic_path(@parent) %>] Works</h1>
		<%= paginate @works, :window => 2 %>
	</header>

	<%= render 'list' %>

	<footer><%= paginate @works, :window => 2 %></footer>

	<footer class='related_items'>
		<p><%= link_to @parent.heading, polymorphic_path(@parent) %></p>
		
		<% if @parent.is_subject? %>
	 		<%= render 'shared/subject_footer' %>
		<% else %>
	 		<%= render 'shared/tag_footer' %>
 		<% end %>
	</footer>
</main>

