<% provide(:title, @work.title) %>

<%= @work.breadcrumbs %>

<header class="work-header">
	<h1><%= @work.title %></h1>
	<%= @work.completion_status %>
	<%= @work.metadata_block %>
	<%= @work.response_bar %>
</header>

<div class="subject-body">
	<%= @work.summary_block unless @work.lacks_summary? %>

	<%= page_widget "Articles" do %>
		<% @work.current_articles.each do |article| %>
			<h3><%= article.title %></h3>

			<p><%= article.time_started.html_safe %> | <%= article.time_updated.html_safe %></p>
		<% end %>
	<% end %>

	<%= render 'works/shared/tag_widget' %>
</div>

<footer class="path-finder">
	<p>
		<%= link_to t('content_types.journals'), journals_path %> |
		<%= link_to t('collected.nonfiction'), nonfiction_index_path %> |
		<%= link_to t('collected.works'), works_path %>
	</p>
</footer>
