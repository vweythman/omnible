<%= clean_form_for(@short) do |f| %>

	<%= error_block(@short) %>

	<fieldset class="primary-fieldset">
		<%= f.string_cell :title, "Title" %>
		<%= f.text_cell   :summary, { class: :minor }, true %>
		<%= f.text_cell   :story_content, class: :major %>
		<%= render @short.meta_fields, f: f %>
	</fieldset>
	
	<%= render @short.tag_fields, f: f %>

	<%= f.submit_cell %>
<% end %>
