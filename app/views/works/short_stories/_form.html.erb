<%= form_for(@short) do |f| %>

	<%= f.hidden_field :uploader_id,  :value => current_user.id %>

	<fieldset class="primary">
		<%= render 'works/shared/work_fields', f: f %>

		<%= f.fields_for :chapter do |builder| %>
			<%= form_field builder.label(:content), builder.text_area(:content, :placeholder => "Write Story", :class=> :major) %>
		<% end %>
	</fieldset>
	
	<%= render 'works/shared/work_tag_fields', f: f %>

	<%= f.submit %>
<% end %>
