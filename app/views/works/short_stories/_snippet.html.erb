<header class="snippet-header">
	<h4>
		<%= short_story.icon %>
		<%= link_to short_story.title, short_story %>
	</h4>
	<%= short_story.max_rating_status %>
</header>

<div class="snippet-body">
	<%= short_story.summarized %>
	<%= short_story.snippet_tags_line %>
</div>

<footer class="snippet-footer">
	<%= short_story.byline %>
	<%= short_story.time_started %>
</footer>
