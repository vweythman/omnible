<fieldset class="chapter">
	<legend>
		<%= form_field f.label(:title), f.text_field(:title, :placeholder => "Write Chapter Title") %>
	</legend>
	<%= form_field f.label(:about, "Summary"), f.text_area(:about, :placeholder => "Write Chapter Summary", class: "minor") %>
	<%= form_field f.label(:content), f.text_area(:content, :placeholder => "Write Chapter", class: "major") %>
	<%= form_field f.label(:afterward), f.text_area(:afterward, :placeholder => "Write Afterward", class: "minor") %>
</fieldset>
