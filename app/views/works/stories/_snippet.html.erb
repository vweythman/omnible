<h4>
	<%= story.icon %>
	<%= link_to story.title_with_count, story %>
</h4>

<div class="snippet-detail">
	<%= story.completion_status %>

	<%= story.chapters_status %>
	<%= story.rated %>

	<div class="about">
		<%= story.uploaded_by.html_safe %>
	</div>

	<div class="snippet-meta">
		<%= story.summarized %>
		<%= story.snippet_tags_line %>
	</div>
</div>
