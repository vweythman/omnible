<%= form_for(@story) do |f| %>

	<%= f.hidden_field :uploader_id,  :value => current_user.id %>

	<ul>
		<% @story.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>

	<fieldset class="primary">
		<%= render 'works/shared/work_fields', f: f %>
	</fieldset>

	<%= @story.current_chapters.show %>
	<%= content_tag :fieldset, class: @story.current_chapters.nest_class, id: @story.current_chapters.formid do %>
		<%= @story.current_chapters.legend %>
		<%= @story.current_chapters.fields(f) %>
		<p><%= link_to_add_association "+ Add Chapter", f, @story.current_chapters.klass, :partial => @story.current_chapters.partial %></p>
	<% end %>

	<%= render 'works/shared/work_tag_fields', f: f %>

	<%= f.submit %>
<% end %>
