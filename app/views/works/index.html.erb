<% provide :title, @works.title %>

<header class="index-header">
	<h1><%= @works.heading %></h1>
	<%= @works.found_status %>

	<%= @works.for_categories %>
	<%= @works.creation_path %>
</header>

<div class="index-body">
	<div class="results">
		<header><%= paginate @works, :window => @works.page_window %></header>

		<div class="filtered">
			<%= grid_panel do %>
				<%= panel_cell "results-body golden-major" do %>
					<%= @works.snippets %>
					<%= @works.link_display_question %>
				<% end %>
				<%= panel_cell "golden-minor" do @works.filters end %>
			<% end %>
		</div>

		<footer><%= paginate @works, :window => @works.page_window %></footer>
	</div>
</div>

<script type="text/javascript">
$('.filter-links').change(function() { window.location.href = $(this).val(); });
</script>
