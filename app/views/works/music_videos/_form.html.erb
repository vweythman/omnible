<%= clean_form_for(@video) do |f| %>

	<%= error_block(@video) %>

	<fieldset class="primary-fieldset">
		<%= panel_cell "duo" do f.string_cell :title, "Title" end %>
		<%= panel_cell "duo" do %>
			<%= f.fields_for :embedded_link do |b| %>
				<%= b.string_cell :reference, "Embed Video Link" %>
			<% end %>
		<% end %>

		<%= solo_cell do f.text_cell(:summary, class: :minor) end %>
	</fieldset>

	<%= render @video.tag_fields, f: f %>

	<%= f.submit_cell %>
<% end %>
