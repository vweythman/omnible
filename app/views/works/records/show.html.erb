<% provide(:title, @record.title) %>

<header class="work-header record-header">
	<h1><%= @record.title %></h1>
	<%= @record.edit_bar %>
</header>

<article class="record-info">
	<%= solo_cell "summary-cell" do %>
		<h2>Summary</h2>
		<%= @record.summarized %>
	<% end %>

	<%= grid_panel do %>
		<%= panel_cell "duo" do %>
			<h2>Characters</h2>

			<ul class="indexable characters">
				<% @record.characters.alphabetical.each do |character| %>
					<li class="icon icon-smile"><%= link_to character.name, character %></li>
				<% end %>
			</ul>
		<% end %>

		<%= panel_cell "duo" do %>
			<h2>Places</h2>
			<ul class="indexable places">
				<% @record.places.alphabetical.each do |place| %>
					<li class="icon icon-earth"><%= link_to place.name, place %></li>
				<% end %>
			</ul>
		<% end %>
	<% end %>
</article>

<footer class="path-finder">
	<%= link_to t("All Works"), works_path %>
</footer>
