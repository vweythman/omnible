<%= form_for(@skin) do |f| %>

	<% if @skin.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@skin.errors.count, "error") %> prohibited this skin from being saved:</h2>

			<ul>
			<% @skin.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<fieldset class="primary">
		<%= string_panel f, :title, "Write Title" %>
		<%= text_panel   f, :style, :major, "Stylesheet" %>

		<%= solo_cell "field" do %>
			<div class="field-content"><%= f.label(:status, "Publicity") %></div>
			<div class="field-content">
				<%= f.select(:status, options_for_select(Skin.statuses, selected: 'Public')) %>
			</div>
		<% end %>
	</fieldset>

	<%= submit_panel f %>
<% end %>
