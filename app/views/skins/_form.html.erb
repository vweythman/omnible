<%= clean_form_for(@skin) do |f| %>

	<%= error_block(@skin) %>

	<fieldset class="primary-fieldset">
		<%= f.string_cell :title, "Stylesheet Title" %>
		<%= f.text_cell   :style, class: :major %>
		<%= f.drop_selection_cell :status, Skin.statuses, "Publicity", selected: 'Public' %>
	</fieldset>

	<%= f.submit_cell %>
<% end %>
