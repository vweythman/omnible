<div class="facets management-widget">
	<table id="facets-table" class="editable sortable">
		<caption>Useable Facets</caption>

		<thead>
			<tr>
				<th colspan="2">Facet</th>
				<th>Number of Identities</th>
				<th>Number of Characters</th>
			</tr>
		</thead>

		<tbody  class="management-body" id="facet-list">
			<% @facets.each do |item| %>
				<tr id="facet-<%= item.id %>">
					<th class="facet-title">
						<%= link_to item.heading, item %>
					</th>
					<td class="facet-editor">
						<%= item.edit_bar %>
					</td>

					<td data-label="Identities Count">
						<%= item.identities.count %>
					</td>
					<td data-label="Character Count">
						<%= item.characters.count %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div>
		<%= @facets.inline_creation %>
		<%= @facets.creation_path %>
	</div>
</div>
